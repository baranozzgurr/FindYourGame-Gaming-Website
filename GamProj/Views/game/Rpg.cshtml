<!DOCTYPE html>
<html lang="en">
<head>
    @section Scripts
{

    }
    <link href="@Url.Content("~/Content/style.css") rel="stylesheet" type="text/css" />
    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>FindYourGame</title>

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="FindYourGame">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">

    <!-- Favicon
    ================================================== -->
    <link rel="icon" type="image/png" href="https://i.pinimg.com/originals/89/ed/5f/89ed5f5193647c81f54c0007d856d97d.jpg">

    <!-- CSS
    ================================================== -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/plugins/bootstrap/bootstrap.min.css">
